<% include partials/header %>



   <div class="d-flex justify-content-center align-items-center container my-5">
     <h3 style="color:white;">Страница Администратора</h3>
<form action="/" method="POST" id="AdminForm" class="container needs-validation" novalidate style="color:white;">
    
    <div class="form-row align-items-center">
        
      <div class="col-md-4 mb-3">
        <label for="validationCustom01">Название продукта</label>
        <input type="text" name="title" class="form-control" id="validationCustom01" placeholder="Title" value="" required>
        <div class="valid-feedback">
          Отлично
        </div>
        <div class="invalid-feedback">
            Нужно имя продукта
          </div>
      </div>
      
    </div>
    
     <div class="form-row align-items-center">
       <div class="col-md-4 mb-3">
        <label for="validationCustom02">url изображения</label>
        <input type="text" name="image" class="form-control" id="validationCustom02" placeholder="image url" value="" required>
        <div class="valid-feedback">
          Отлично
        </div>
        <div class="invalid-feedback">
            Нужен url.
          </div>
      </div>
    </div>
    
    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label for="validationCustom03">Описание продукта для карточки</label>
        <input type="text" name="info" class="form-control" id="validationCustom03" placeholder="Info" required>
        <div class="invalid-feedback">
          Нужно описание для карточки
        </div>
      </div>
    </div>
    
    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label for="validationCustom03">Полное описание</label>
        <input type="text" name="description" class="form-control" id="validationCustom03" placeholder="description" required>
        <div class="invalid-feedback">
          Нужно Описание для страницы
        </div>
      </div>
    </div>
    
    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label for="validationCustom03">Цена</label>
        <input type="text" name="price" class="form-control" id="validationCustom03" placeholder="Price" required>
        <div class="invalid-feedback">
          Нужна Цена
        </div>
      </div>
    </div>
    
    <button id="" class="btn btn-success" type="submit">Сохранить</button>
  </form>
 </div>

<% include partials/footerShort %>
